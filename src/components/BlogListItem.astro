---
import { css } from '@styledSystem/css'

interface Props {
  title: string
  createdDate: string
  updatedDate?: string
  tags: string[]
  img?: string
}

const { title, createdDate, tags } = Astro.props
---

<div
  class={css({
    width: '100%',
    borderRadius: '10px',
    boxShadow: '-5px -5px 20px #ffffff, 5px 5px 20px #BABECC',
    padding: '1rem 2rem',
    display: 'flex',
    justifyContent: 'space-between',
    marginBottom: '20px',
    textShadow: '1px 1px 1px #ffffff',
    transition: 'all 0.2s ease-in-out',
    _hover: {
      boxShadow: '-2px -2px 5px #ffffff, 2px 2px 5px #BABECC',
    },
    _active: {
      boxShadow: 'inset 1px 1px 2px #BABECC, inset -1px -1px 2px #ffffff',
    },
  })}
>
  <div
    class={css({
      display: 'flex',
      flexDirection: 'column',
      justifyContent: 'space-between',
    })}
  >
    <div
      class={css({
        fontSize: '2xl',
      })}
    >
      <p>{title}</p>
    </div>
    <div
      class={css({
        display: 'flex',
        gap: '20px',
      })}
    >
      <p>{createdDate}</p>
      <div
        class={css({
          display: 'flex',
          gap: '10px',
        })}
      >
        {tags.map((tag) => <p>#{tag}</p>)}
      </div>
    </div>
  </div>
  <div>
    <div
      class={css({
        width: '80px',
        height: '80px',
        borderRadius: '5px',
        backgroundColor: '#000000',
      })}
    >
    </div>
  </div>
</div>
